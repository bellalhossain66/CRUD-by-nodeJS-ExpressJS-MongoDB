<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="./img/cb.png" />
    <title>
        <%- (typeof(title) != undefined)? title: 'Cashbase' %>
    </title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" type="text/css" href="./plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="./dist/css/adminlte.min.css">
</head>

<body class="hold-transition coin-base">
    <div class="wrapper">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-6 p-5">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control name">
                                <input type="hidden" class="form-control action-id">
                            </div>
                            <div class="form-group">
                                <label>Age</label>
                                <input type="number" class="form-control age">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control email">
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <textarea rows="5" class="form-control address"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="form-control add-person bg-success">
                                <input type="submit" class="form-control update-person bg-success d-none">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 pt-5">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Sn</th>
                                            <th>Name</th>
                                            <th>Age</th>
                                            <th>Email</th>
                                            <th>Address</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="person"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="./plugins/jquery/jquery.min.js"></script>
<script src="./js/crud.js"></script>

</html>